{
	"name": "skeleton",
	"description": "A custom WordPress plugin.",
	"license": "MIT",
	"devDependencies": {
		"@wordpress/eslint-plugin": "^17.7.0",
		"@wordpress/stylelint-config": "^21.33.0",
		"bootstrap": "^4.6.2",
		"gulp": "^4.0.2",
		"gulp-cli": "^2.3.0",
		"gulp-dart-sass": "^1.1.0",
		"gulp-rename": "^2.0.0",
		"merge-stream": "^2.0.0",
		"npm-run-all": "^4.1.5"
	},
	"scripts": {
		"build": "gulp",
		"fix": "npm-run-all -p fix:scss fix:css fix:js",
		"fix:css": "stylelint 'assets/css/**/*.css' --fix",
		"fix:scss": "stylelint 'assets/scss/**/*.scss' --fix",
		"fix:js": "eslint 'assets/js/*.js' --fix",
		"check": "npm-run-all -p check:scss check:css check:js",
		"check:scss": "stylelint 'assets/scss/**/*.scss'",
		"check:css": "stylelint 'assets/css/**/*.css'",
		"check:js": "eslint 'assets/js/*.js'"
	}
}
